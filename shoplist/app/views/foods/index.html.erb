<div class="page-header">
  <h1>
    Foods
    <a href="/foods/new" class="btn btn-lg btn-success">New Food</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>List</th>
        <th>User</th>
        <th>Ideal number</th>
        <th>Safety level</th>
        <th>Current number</th>
        <th>Image</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @foods.each do |food| %>
      <tr>
        <td><%= food.list_id %></td>
        <td><%= food.user_id %></td>
        <td><%= food.ideal_number %></td>
        <td><%= food.safety_level %></td>
        <td><%= food.current_number %></td>
        <td><%= food.image %></td>
        <td><%= food.name %></td>
        <td>
          <a href="/foods/<%= food.id %>" class="btn btn-primary">Show</a>
          <a href="/foods/<%= food.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food/<%= food.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
