<div class="page-header">
  <h1>
    ShopList

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Food</th>
        <th>Place</th>
        <th>Quantity needed</th>



        <th>Actions</th>
      </tr>

      <% @foods.each do |food| %>
      <% if food.current_number < food.safety_level %>
      <tr>
        <td><img src="<%= food.image %>" width="40"></td>
        <td><%= food.name %></td>
        <td><%= food.list.list_name %></td>
        <td><%= food.ideal_number - food.current_number %></td>
        <td>
          <a href="/foods/<%= food.id %>" class="btn btn-primary">Show</a>
          <a href="/foods/<%= food.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food/<%= food.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
