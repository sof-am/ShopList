<div class="page-header">
  <h1>
    What did you eat today?
    <a href="/foods/new" class="btn btn-lg btn-success">New Food</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Place</th>
        <th>Current number</th>
        <th>Actions</th>
      </tr>

      <% @foods.each do |food| %>
      <tr>
        <td><img src="<%= food.image %>" width="40"></td>
        <td><%= food.name %></td>
        <td><%= food.list.list_name %></td>
        <td><%= food.current_number %></td>


        <td>

          <a href="/foods/<%= food.id %>/edit" class="btn btn-warning">-</a>
          <a href="/delete_food/<%= food.id %>" class="btn btn-primary" rel="nofollow">+</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
